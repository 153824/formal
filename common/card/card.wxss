.feature{
  position: absolute;
  top:  100rpx;
  right: 20rpx;
  width: 160rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  background-color: rgba(255,255,255,0.9);
  border-radius: 10rpx;
  text-align: center;
}

.card-child-info {
  max-width: 350rpx;
}
.card-child-info > .title{
  display: block;
  font-weight: 700;
  font-size: 32rpx;
}

.card-child-info > .detail{
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #5c6171;
}

