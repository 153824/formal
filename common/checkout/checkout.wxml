<!--common/checkout/checkout.wxml-->
<view class="{{ type === 'introduction' ? 'introduction' : 'none' }}">
  <view class="head">
    <text class="title">{{title}}</text>
    <text class="line"></text>
    <text class="title-bg">Introduction</text>
  </view>
  <view class="introduction-content">
    <rich-text nodes="{{ info }}"></rich-text>
  </view>
</view>

<view class="{{ type === 'dimension' ? 'dimension' : 'none' }}">
  <view class="head">
    <text class="title">{{ title }}</text>
    <text class="line"></text>
    <text class="title-bg">Dimension</text>
  </view>
  <view class="dimension-content">
    <view class="dimension-content-wrapper" wx:for="{{ list }}">
       <view class="dimension-child">
          <text>{{ item }}</text>
       </view>
    </view>
  </view>
</view>

<view class="{{ type === 'scenarios' ? 'scenarios' : 'none' }}">
  <view class="head">
    <text class="title">{{ title }}</text>
    <text class="line"></text>
    <text class="title-bg">Scenarios</text>
  </view>
  <view class="scenarios-area" wx:for="{{ list }}" wx:for-item="applyitem" wx:for-index="applyindex" wx:key="unique">
      <view class="scenarios-content">
          <view class="scenarios-child">
              <image class="scenarios-icon" src="{{ applyitem.icon||'../img/store/detail/icon3.png' }}"></image>
              <text class="scenarios-title">{{ applyitem.name }}</text>
          </view>
          <view class="scenarios-info">
              {{ applyitem.content }}
          </view>
      </view>
  </view>
</view>

<view class="{{ type === 'example' ? 'example' : 'none' }}">
  <view class="head">
    <text class="title">{{ title }}</text>
    <text class="line"></text>
    <text class="title-bg">Scenarios</text>
  </view>
  <view class="example-content">
      <view class="example-child" wx:for="{{ list }}" wx:for-item="quesTypeitem" wx:for-index="quesTypeindex" wx:key="unique" data-i="{{quesTypeindex}}">
          <rich-text class="queStem bold" nodes="<p>{{quesTypeindex+1}}„ÄÅ{{quesTypeitem.stem}}</p>"></rich-text>
          <view class="subject-wrapper" wx:for="{{quesTypeitem.options}}" wx:key="unique" wx:for-item="node">
              <view class="subject-child">
                  <view>
                      {{node.txt}}
                  </view>
                  <view>
                      {{node.msg}}
                  </view>
              </view>
          </view>
      </view>
  </view>
</view>

