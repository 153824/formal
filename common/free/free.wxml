<!--common/free/free.wxml-->
<view class="price">
    <block wx:if="{{ ios }}">
        <text wx:if="{{ free }}" class="actual-price free">免费</text>
        <text wx:else></text>
    </block>
    <block wx:else>
        <text class="origin-price" wx:if="{{ price.length > 0 }}">￥{{ price }}</text>
        <text wx:if="{{ free }}" class="actual-price free">免费</text>
        <text wx:else class="actual-price">￥{{ actual }}</text>
    </block>
</view>
