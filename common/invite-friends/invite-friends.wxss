}
.invite-friend__footer{
    display: flex;
    justify-content: space-around;
}
.invite-friend__footer-item{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    font-family: PingFang SC-Semibold, PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
    line-height: 30rpx;
}
.invite-friend__footer-item > image{
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 16rpx;
}