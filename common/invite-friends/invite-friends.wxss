}
.invite-friend{
    padding: 210rpx 76rpx 0 76rpx;
}
.invite-friend__header{
    font-size: 36rpx;
    font-family: PingFang SC-Semibold, PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
    line-height: 42rpx;
    text-align: center;
}
.invite-friend__content{
}
.invite-friend__content > image{
    width: 600rpx;
    height: 1100rpx;
