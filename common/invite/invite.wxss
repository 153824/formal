/* common/invite/invite.wxss */
.invite{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding-top: 120rpx;
    padding-bottom: 120rpx;
    /*position: fixed;*/
    /*top: 0;*/
    /*right: 0;*/
    /*bottom: 0;*/
    /*left: 0;*/
    /*height: 100%;*/
    /*width: 100%;*/
    background-color: #00000080;
    font-size: 26rpx;
    font-weight: 400;
}
.invite-wrapper{
    margin: 0 100rpx;
    padding: 30rpx 25rpx 0 25rpx;
    height: 988rpx;
    background-color: rgba(89, 96, 237,1);
    border-radius: 10rpx;
}
.invite-content{
    padding: 50rpx 50rpx 30rpx 50rpx;
    background-color: #fff;
    border-radius: 30rpx;
}
.invite-info-wrapper{
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    padding-bottom: 40rpx;
    border-bottom: 1px solid rgba(222, 222, 222,1);
}
.invite-time{

}
.invite-alert{

}
.company-name{
    line-height: 50rpx;
    font-size: 40rpx;
    font-weight: 550;
    letter-spacing: 4rpx;
}
.invite-detail-wrapper{
    display: flex;
    flex-direction: column;
}
.invite-detail-child{
    display: flex;
    flex-direction: column;
    margin-bottom: 40rpx;
}
.invite-detail-title{
    display: flex;
    align-items: center;
    color: rgba(89, 96, 237,1);
    font-size: 30rpx;
    font-weight: 400;
}
.invite-detail-icon{
    margin-right: 10rpx;
    width: 30rpx;
    height: 30rpx;
}
.invite-detail-info{
    margin: 10rpx 0 0 40rpx;
    font-size: 24rpx;
    color: #9C9DA7FF;
}
.invite-share{

}
.save-or-share{
    margin: 20rpx 0;
    font-size: 28rpx;
    font-weight: 600;
    color: #FFFFFFFF;
}