<!--common/meal/meal.wxml-->
<view wx:if="{{ isShow }}" class="meal" style="justify-content: {{ align }}">
    <view class="meal-info" style="margin:{{ subMargin.length > 0 ? subMargin : '' }};">
        <image wx:if="{{ icon.length > 0 }}" src="{{ icon }}" class="meal-icon" style="{{ icon ? 'width:36rpx;margin-right: 20rpx;' : 'width:0rpx;' }}"></image>
        <text>{{ title }}</text>
    </view>
    <view class="meal-detail">
        {{ subtitle }}
    </view>
</view>
