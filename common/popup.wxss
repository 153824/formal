/* common/popup/popup.wxss */

/* popup */

.popup {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
}

.imgbox {
  width: 546rpx;
  height: 918rpx;
  margin: 92rpx 102rpx 0;
}

.bluebox {
  width: 100%;
  height: 806rpx;
  background-color: #5960ed;
}

.botbox {
  height: 112rpx;
  background-color: #fff;
  border-radius: 0px 0px 24rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.boxleft {
  width: 228rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.grayline {
  width: 2rpx;
  height: 48rpx;
  background-color: #d8d8d8;
}

.boxright {
  width: 312rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.boxleft::after, .boxright::after {
  border: none;
}

.boxleft>image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

.boxright>image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.botbox text {
  font-size: 28rpx;
  letter-spacing: 1px;
  line-height: 40rpx;
  color: #5c6171;
}

.closebtn {
  width: 44rpx;
  height: 44rpx;
  margin: 30rpx 0;
}

.centerbox {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.sharetext {
  font-size: 28rpx;
  letter-spacing: 1px;
  line-height: 40rpx;
  color: #fff;
}
