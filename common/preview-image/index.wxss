.datibox {
    position: fixed;
    top: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    z-index: 999999;
}

.daticenterbox {
    width: 556rpx;
    position: relative;
}

.daticenterboximg {
    width: 556rpx;
    height: 990rpx;
}

.daticlosebtn {
    width: 56rpx;
    height: 56rpx;
    position: absolute;
    top: -28rpx;
    right: -28rpx;
}

.datiboxfoottext {
    font-size: 28rpx;
    font-weight: 600;
    color: rgba(255, 255, 255, 1);
    line-height: 40rpx;
    margin-top: 32rpx;
}
.circle-wrapper{
    display: flex;
    width: 60rpx;
    height: 60rpx;
    justify-content: center;
    align-items: center;
}
.share-paper{
    width: 382rpx;
    height: 76rpx;
    margin: 64rpx 0 60rpx 0;
    line-height: 76rpx;
    background: linear-gradient(135deg,rgba(101,114,245,1) 0%,rgba(53,62,232,1) 100%);
    box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0,0,0,0.27);
    border-radius: 10rpx;
    font-size: 32rpx;
    color: white;
}
.loading{
    width: 44rpx;
    height: 44rpx;
    animation: loading 1s infinite;
}
.button-group{
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    padding: 0 86rpx;
}
.van-button-custom{
    font-size: 32rpx !important;
    font-weight: 400;
}
.department-wrapper{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.depart{
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    width: 100%;
    margin-top: 70rpx;
    padding: 20rpx 0rpx;
    background: #fff;
    border-radius: 10rpx;
    height: 60rpx
}
.van-dropdown-item--down{
    top: 510px !important;
}
.van-dropdown-menu{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.title{
    font-size: 16px;
    font-weight: 500;
    color: #12132F;
}
.dispatch-info-wrapper{
    display: flex;
    justify-content: center;
    margin: 60rpx 0 0 0;
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #12132F;
}
.dispatch-count{
    color: rgba(53, 62, 232, 1);
}
@keyframes loading {
    from{
        transform: rotate(0deg);
    }
    to{
        transform: rotate(360deg);
    }
}
