/* common/skill/skill.wxss */
.skill-wrapper{
  display: flex;
  margin: 30rpx 40rpx 30rpx 40rpx;
}

.skill-set{
  width: 100%;
}

.skill-child{
  padding: 20rpx 30rpx 24rpx 30rpx;
  border: 2rpx solid rgba(7, 9, 34, 0.05);
  border-radius: 20rpx;
  background-color: rgba(7, 9, 34, 0.03);
}

.test-introduce{
  display: flex;
}

.introduce{
  margin: 0rpx 0 0rpx 26rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #070922CC;
}

.introduce > .title{
  display: block;
  line-height: 44rpx;
}

.introduce > .word{
  font-size: 24rpx;
  font-weight: 400;
  color: #070922CC;
  margin: 10rpx 0 0 0;
  line-height: 40rpx;
}

.cover{
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
}

.test-use-info{
  display: flex;
  margin-top: 18rpx;
  justify-content: space-between;
}

.use-count{
  color: #BEBEBEFF;
  font-size: 24rpx;
  line-height: 40rpx;
}

.price{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
  font-size: 24rpx;
}

.origin-price{
  margin-right: 16rpx;
  text-decoration: line-through;
  color: #B1B1B1CC;
  font-size: 24rpx;
}

.actual-price{
  display: inline-block;
}

.free{
  min-width: 174rpx;
  min-height: 40rpx;
  background:linear-gradient(136deg,rgba(226,23,61,1) 0%,rgba(240,55,199,1) 100%);
  border-radius: 30rpx 0rpx 30rpx 0rpx;
  text-align: center;
  font-size: 28rpx;
}

