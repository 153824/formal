var getMonthAndDayByFrag = function( fullTime,frag="/" ){
  var date = getDate(fullTime);
  return date.getMonth() + frag + date.getDate()
};

var getHourAndMinByFrag = function( fullTime,frag=":" ){
  var date = getDate(fullTime);
  var targetTime = date.getMinutes();
  if( date.getMinutes() < 10 ){
    targetTime = "0" + date.getMinutes();
  }

  return date.getHours() + frag + targetTime;
};

var getFullDateByFrag = function( fullTime,frag="/" ){
  var date = getDate(fullTime);
  return date.getFullYear()+frag+(date.getMonth()+1)+frag+date.getDate();
};

var saveDouble = function(number){
  return number.toFixed(2);
};

var hidePartPhoneNumber = function(phone){
  var targetPhone = phone;
  // var reg = new RegExp(/(\d{3})\d{4}(\d{4})/,'g');
  if( phone.length < 11 ){
    return "微信一键授权"
  }
  targetPhone = phone.replace(getRegExp("(\d{3})\d{4}(\d{4})"), '$1****$2');
  return targetPhone;
};
module.exports = {
  getMonthAndDayByFrag: getMonthAndDayByFrag,
  getHourAndMinByFrag: getHourAndMinByFrag,
  getFullDateByFrag: getFullDateByFrag,
  saveDouble: saveDouble,
  hidePartPhoneNumber: hidePartPhoneNumber
};
