<wxs module="handler" src="./index.wxs"></wxs>
<view class="item-wrap item-wrap-class"
	  list="{{list}}"
	  style="{{wrapStyle}}"
	  baseData="{{baseData}}"
	  change:list="{{handler.listObserver}}"
	  change:baseData="{{handler.baseDataObserver}}">
	<view
		class="item"
		wx:for="{{list}}"
		data-index="{{index}}"
		style="width: {{100/columns}}%;height: {{maxItemHeight ? maxItemHeight : auto }}px;"
		data-out-side-scroll-top="{{outSideScrollTop}}"
		data-max-item-height="{{maxItemHeight}}"
		bind:longpress="{{handler.longPress}}"
		catch:touchmove="{{dragging ? handler.touchMove : ''}}"
		catch:touchend="{{dragging ? handler.touchEnd : ''}}">
		<view class="item-content" style="min-height: {{pixelRate * (maxItemHeight - 15) - 60}}rpx;">
			<text class="question-number">{{index+1}}</text>
			{{item.data.index}}Â·{{item.data.content}}
		</view>
