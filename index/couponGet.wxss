/* index/couponGet.wxss */

.bgImg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 1;
}

.headerView {
  position: fixed;
  left: 0;
  right: 0;
  height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  line-height: 90rpx;
  text-align: center;
  z-index: 2;
}

.headerView .back {
  padding-left: 40rpx;
  box-sizing: border-box;
  height: 90rpx;
}

.headerView .back image {
  width: 98rpx;
  height: 64rpx;
  margin-top: 13rpx;
}

.topMsg {
  padding-left: 40rpx;
  position: relative;
  z-index: 1;
  padding-top: 90rpx;
  box-sizing: border-box;
  color: #fff;
}

.topMsg .txt1 {
  margin-top: 35rpx;
  margin-bottom: 14rpx;
  font-size: 68rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 96rpx;
}

.topMsg .txt1 image {
  width: 58rpx;
  height: 46rpx;
  margin-left: 18rpx;
}

.topMsg .txt2 {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(254, 255, 254, 1);
  line-height: 40rpx;
}

.topMsg .txt2 text {
  font-weight: 600;
}

.list {
  margin-top: 26rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 340rpx;
  z-index: 9;
  overflow: auto;
  padding-bottom: 40rpx;
}

.list .item {
  background: rgba(254, 255, 254, 1);
  box-shadow: 0px 4rpx 14rpx 0px rgba(172, 193, 222, 0.5);
  border-radius: 12rpx;
  margin: 20rpx 30rpx 0;
  padding: 30rpx 24rpx 30rpx 32rpx;
}

.list .item .name {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  line-height: 44rpx;
  margin-bottom: 16rpx;
}

.list .item .name  text {
  float: right;
  background: rgba(232, 106, 18, 1);
  border-radius: 6rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(245, 248, 250, 1);
  line-height: 40rpx;
  padding: 2rpx 28rpx;
}

.list .item .mindMsg {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(144, 145, 156, 1);
  line-height: 40rpx;
}

.list .item .btnView:after {
  content: "";
  display: block;
  clear: both;
}

.list .item .userBtn {
  width: 174rpx;
  padding: 10rpx 28rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 1px solid rgba(89, 96, 237, 1);
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(89, 96, 237, 1);
  line-height: 40rpx;
  box-sizing: border-box;
  float: right;
}
