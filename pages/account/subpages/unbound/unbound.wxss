.unbound{
    padding: 40rpx 60rpx;
}
.unbound__item--wrapper{
    padding: 0 0 64rpx 0;
}
.unbound__title--text{
    font-size: 40rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #000000;
    line-height: 40rpx;
}
.unbound__user-info--wrapper{
    display: flex;
    flex-direction: row;
    margin: 50rpx 0;
    padding: 40rpx 40rpx;
    background: rgba(53, 62, 232, 0.05);
    border-radius: 20rpx;
}
.unbound__user-info-avatar--wrapper{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100rpx;
    height: 100rpx;
    background: #353EE8;
    box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.5);
    border-radius: 50%;
}
.unbound__user-info-name--wrapper{
    display: flex;
    flex-direction: column;
    margin-left: 40rpx;
}
.unbound__user-info-name{
    font-size: 32rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #000000;
    line-height: 44rpx;
    letter-spacing: 2rpx;
}
.unbound__user-info-account{
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #000000;
    line-height: 40rpx;
}
.unbound__user-info--avatar{
    width: 50rpx;
    height: 50rpx;
}
.unbound__step--card{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    padding: 50rpx 0 30rpx 0;
    height: 128rpx;
    background: #FCFCFC;
    border-radius: 10px;
}
.unbound__title-text--wrapper{
    margin-bottom: 50rpx;
}
.unbound__step-card--text{
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #000000;
    line-height: 44rpx;
    letter-spacing: 2rpx;
}
.unbound__char-text--wrapper{
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 12rpx 0rpx;
}
.unbound__step-card--logo{
    width: 60rpx;
    height: 60rpx;
}
.unbound-custom-van-button{
    width: calc(100vw - 120rpx);
    height: 88rpx!important;
    border-radius: 10rpx!important;
    font-size: 32rpx!important;
    font-family: PingFangSC-Semibold, PingFang SC!important;
    font-weight: 600;
    color: #FFFFFF!important;
    line-height: 44rpx!important;
}
.unbound-custom-van-button.is-plain{
    font-size: 28rpx!important;
    font-family: PingFangSC-Regular, PingFang SC!important;
    font-weight: 400!important;
    color: #353EE8FF!important;
    line-height: 40rpx!important;
    border: unset!important;
}
