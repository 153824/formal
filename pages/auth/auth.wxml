<hola-title type="cant-back" liner="{{liner}}" time="{{startTime}}" moreType="{{type}}" width="150vw"></hola-title>
<view class="omni">
    <view class="omni--view__item">
        <view class="omni--view__item-content">
            <view class="omni--view__item__text">欢迎使用，</view>
            <view class="omni--view__item__text">{{ appTitle }}</view>
            <image class="omni--view__item__bg" src="https://ihola.luoke101.com/3rd-bg.png" alt=""/>
        </view>
        <view class="omni--view__item__circle-mask"></view>
    </view>
    <view class="omni--view__item-info">
        <view class="omni--view__item-info__user-info">
            <text class="omni--intro-text">{{type === 'auth' ? '请授权您的手机号以登录系统' : '您的登录凭证已过期，请重新获取' }}</text>
        </view>
        <view>
            <block wx:if="{{type === 'auth'}}">
                <button class="omni__login-btn" open-type="getPhoneNumber" bind:getphonenumber="wxAuthLogin">
                    微信一键授权登录
                </button>
            </block>
            <block wx:else>
                <button class="omni__login-btn" bind:tap="prueLogin">
                    一键获取登录凭证
                </button>
            </block>
        </view>
    </view>
</view>
