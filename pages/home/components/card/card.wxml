<view class="card" data-evaluation-id="{{evaluationId}}" bind:tap="goToEvaluationDetail">
    <view class="cover-wrapper">
        <image src="{{cover}}"/>
    </view>
    <view class="info-wrapper">
        <view class="info">
            <text class="title">{{title}}</text>
            <view class="tips">
                <text>{{topic ? '#'+ topic : '' }}</text>
                <text class="sub-tip">{{tip}}</text>
            </view>
        </view>
    </view>
    <block wx:if="{{!!tag}}">
        <view class="tag">
            {{tag}}
        </view>
    </block>
</view>
