.card{
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 130rpx;
    padding: 30rpx 0rpx;
    margin-bottom: 20rpx;
}
.card .tag{
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 30rpx;
    right: 0;
    width: 84rpx;
    height: 40rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 34rpx;
    border-radius: 20rpx 0rpx 0rpx 20rpx;
}
.card .tag.hot{
    background: #FA6400;
}
.card .tag.new{
    background: #5AD8A6FF;
}
.cover-wrapper{
    position: absolute;
    width: 140rpx;
    height: 140rpx;
    background-repeat: no-repeat;
    background-size: cover;
    box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.1);
    border-radius: 16rpx;
    z-index: 1;
}
.cover-wrapper > image{
    box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.1);
}
.info-wrapper{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 20rpx;
    right: 0;
    box-shadow: 4rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.06);
    border-radius: 12rpx;
    background-color: #ffffff;
    padding-left: 160rpx;
}
.info > .title{
    font-size: 30rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #000000;
    line-height: 40rpx;
}
.info > .tips{
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: center;
    margin-top: 18rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #999999;
    line-height: 34rpx;
}
.info-wrapper > text{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.info-wrapper > .info{
    height: calc(100% - 60rpx);
    padding: 30rpx 30rpx 30rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.sub-tip{
    margin-top: 8rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
