<!--home.wxml-->
<block>
    <title id="title" url="home/home" ></title>
</block>
<view>
    <scroll-view
            id="home-scroll"
            class="home-scroll-view"
            scroll-y
            scroll-x="false"
            bind:scroll="onScroll"
            style="margin-top:{{ (statusbarHeight + titleHeight) }}px;height: calc(100vh - {{(statusbarHeight + titleHeight + tabbarHeight)*1.1}}px);">
        <view class="home-item__1">
            <swiper class="home-swiper"
                    indicator-dots="{{true}}"
                    autoplay="{{autoplay}}"
                    interval="{{interval}}"
                    duration="{{duration}}">
                <block wx:for="{{[0,1,2,3]}}" wx:key="*this">
                    <swiper-item>
                        <view class="home-swiper-item">
                            <view class="home-swiper-item__title">
                                <text>学习力测评</text>
                                <text class="tag">新上架</text>
                            </view>
                            <view class="home-swiper-item__tip">
                                量化评估学习动机水平、学习专注度及学习能力
                            </view>
                        </view>
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <view class="home-item__2">
            <view class="home-item__2-is-left">
                人才盘点
            </view>
            <view class="home-item__2-is-right">
                <view class="school">校招选才</view>
                <view class="social">社招选才</view>
            </view>
        </view>
        <van-sticky scroll-top="{{ scrollTop }}" offset-top="{{ offsetTop }}" bind:scroll="onSticky">
            <view class="home-item__3 {{isFixed ? 'is-padding' : ''}}">
                <view class="home-search">
                    <text>搜索（测评/岗位/类型/场景…)</text>
                    <van-icon name="search" size="20px"/>
                </view>
                <view class="home-contact">
                    <van-icon name="https://s.luoke101.com/ma/image/contact.png" size="16px"/>
                    <text>在线咨询</text>
                </view>
            </view>
        </van-sticky>
        <view class="home-item__4">
            <view class="home-item__4--child">
                <view class="title">
                    人才测评
                </view>
                <view class="content">
                    <hola-card />
                    <hola-card />
                    <hola-card />
                    <hola-card />
                    <hola-card />
                    <hola-card />
                    <hola-card />
                    <hola-card />
                    <hola-card />
                    <hola-card />
                </view>
            </view>
        </view>
    </scroll-view>
</view>
<view id="hola-tab-bar">
    <hola-tab-bar active="{{ active }}" isWxWork="false"></hola-tab-bar>
</view>
