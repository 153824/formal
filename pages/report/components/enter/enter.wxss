.enter-wrapper{
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: auto 60rpx;
    padding: 100rpx 40rpx;
    background: #FFFFFF;
    border-radius: 20rpx;
}
.enter-header{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.title{
    margin-top: 50rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #333333;
    line-height: 52rpx;
}
.form-wrapper{
    padding: 40rpx 0;
}
.step{
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.label{
    text-align: center;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #303113;
    line-height: 40rpx;
}
.company-input{
    width: 100%;
    height: 84rpx;
    padding: 0rpx 10rpx;
    margin: 20rpx 30rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
    border: 2rpx solid #E6E6E6;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    line-height: 40rpx;
    text-align: center;
}
.company-input::placeholder{
    color: #B4B4B4;
}
.submit{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    background: #353EE8;
    border-radius: 8rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
    line-height: 44rpx;
}
.enter-done{
    padding: 0rpx 50rpx;
}
.enter-done-content{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    line-height: 52rpx;
    color: #333333FF;
    margin: 50rpx 0;
}
.done{
    color: #353EE8;
}
.enter-done-footer{
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24rpx 0;
    height: 94rpx;
    background: #353EE8;
    border-radius: 8rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
    line-height: 44rpx;
}
.company-list{
    position: absolute;
    top: -315rpx;
    left: 0;
    right: 0;
    padding: 0rpx 24rpx;
    width: 100%;
    height: 360rpx;
    z-index: 999;
    background: #FFFFFF;
    border-radius: 5px;
    border: 1px solid #E9E9E9;
}
.company-item{
    padding-top: 30rpx;
    padding-bottom: 20rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #303113;
    line-height: 40rpx;
    border-bottom: 2rpx solid #E9E9E9FF;
}
