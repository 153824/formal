/* store catalog */
.store-wrapper{
  display:flex;
  flex-direction: row;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin-bottom: 125rpx;
}

.left-catalog{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 204rpx;
  background-color: rgba(7,9,34,0.05);
}

.left-catalog-wrapper{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.catalog-child{
  width: 204rpx;
  height: 100rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #070922CC;
  transition: all .1s;
}

.catalog-child > .title{
  height: 96rpx;
  line-height: 96rpx;
  margin-left: 28rpx;
}

.active {
  color: #070922CC;
  background-color: rgba(255,255,255,1);
  font-size: 32rpx;
  font-weight: 500;
  transition: all .1s;
}

.right-content{
  display: flex;
}

.right-content-wrapper{
  margin-top: 26rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.none-some-style{
  padding-top: 0 !important;
  box-shadow: none !important;
}

.skill-set{
  padding-top: 20rpx;
}

.skill-info{
  display: flex;
  justify-content: space-between;
  line-height: 44rpx;
}

.skill-info > .title{
  position: relative;
  height: 44rpx;
  line-height: 44rpx;
  color: #070922CC;
  font-size: 32rpx;
  font-weight: 500;
  z-index: 99;
}

