/* user/teams.wxss */

.container {
  background: rgba(238, 238, 239, 1);
}

.header {
  position: relative;
  margin-bottom: 20rpx;
}

.header>image {
  width: 100%;
  height: 470rpx;
  /* height: 596rpx; */
}

.headbox {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.backbtn {
  width: 98rpx;
  height: 64rpx;
  position: fixed;
  top: 60rpx;
  left: 40rpx;
}

.isiphoneX {
  padding-top: 34rpx;
}

.headboxtop {
  margin-top: 60rpx;
  /* margin-top: 180rpx; */
  display: flex;
  justify-content: left;
  align-items: center;
}

.headboxtoptext {
  font-size: 58rpx;
  font-weight: 600;
  color: rgba(231, 193, 146, 1);
  line-height: 82rpx;
  letter-spacing: 1px;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.5);
}

.headboxtop>image {
  width: 52rpx;
  height: 50rpx;
  margin-left: 20rpx;
}

.headlist>image {
  width: 22rpx;
  height: 32rpx;
}

.headlist {
  width: 670rpx;
  height: 82rpx;
  background: rgba(231, 193, 146, 1);
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: 26rpx;
}

.headlist>view {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(50, 53, 65, 1);
  line-height: 40rpx;
}

/* form */

.formbox {
  padding-left: 40rpx;
  box-sizing: border-box;
  height: 114rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: left;
  align-items: center;
  margin-bottom: 2rpx;
}

.formtext {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(50, 53, 65, 1);
  line-height: 40rpx;
  margin-right: 40rpx;
}

.formboxmargin {
  margin: 20rpx 0;
}

.placeholder {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(191, 191, 191, 1);
  line-height: 40rpx;
}

input, .picker {
  width: 540rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(50, 53, 65, 1);
  line-height: 40rpx;
}

.takephoto {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  height: 636rpx;
}

.takephotobox {
  width: 484rpx;
  height: 282rpx;
  background: rgba(241, 243, 246, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.takephototext {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(50, 53, 65, 1);
  line-height: 40rpx;
  letter-spacing: 1px;
  margin: 40rpx 0;
}

.takeicon {
  width: 40rpx;
  height: 30rpx;
}

.takephotobox>view {
  margin-top: 16rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(50, 53, 65, 1);
  line-height: 40rpx;
}

.takephotobtn {
  margin-top: 60rpx;
  width: 672rpx;
  height: 94rpx;
  background-color: #5960ed;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 94rpx;
}

.graybtn {
  text-align: center;
  margin-top: 60rpx;
  width: 672rpx;
  height: 94rpx;
  background-color: #90919c;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 94rpx;
}

.photo {
  width: 100%;
  height: 100%;
}

.oldTeamMsg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #eeeeef;
}

.oldTeamMsg .title {
  background-color: #fff;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(50, 53, 65, 1);
  line-height: 44rpx;
  padding: 68rpx 38rpx 38rpx;
}

.oldTeamMsg .title image {
  width: 36rpx;
  height: 34rpx;
  margin-right: 12rpx;
}

.oldTeamMsg .item {
  background-color: #fff;
  padding: 16rpx 38rpx;
  border-bottom: 1px solid #e7e7e7;
}

.oldTeamMsg .item .label {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(144, 145, 156, 1);
  line-height: 34rpx;
  margin-bottom: 10rpx;
}

.oldTeamMsg .item .valueView {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(50, 53, 65, 1);
  line-height: 40rpx;
}

.oldTeamMsg .takephotobtn {
  width: 548rpx;
  height: 88rpx;
  background: rgba(89, 96, 237, 1);
  border-radius: 14rpx;
  margin: 200rpx auto 0;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
  text-align: center;
}
