.list {
  padding: 40rpx 44rpx;
}

.item {
  padding: 26rpx 36rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4rpx 16rpx 0px rgba(207, 216, 240, 0.79);
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.item .name {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  color: rgba(50, 53, 65, 1);
  line-height: 44rpx;
  letter-spacing: 1px;
  margin-bottom: 22rpx;
}

.item .num {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  color: rgba(89, 96, 237, 1);
  line-height: 40rpx;
}

.item .num text {
  font-size: 56rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  color: rgba(89, 96, 237, 1);
  line-height: 80rpx;
}

.item .mind, .item .time {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(92, 97, 113, 1);
  line-height: 36rpx;
  margin-top: 10rpx;
}

.listNoData {
  padding: 0;
  background-color: transparent;
  position: absolute;
  top: 232rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(144, 145, 156, 1);
  line-height: 44rpx;
}

.noMobile {
  text-align: center;
  padding-top: 342rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(92, 97, 113, 1);
  line-height: 40rpx;
}

.noMobile button {
  width: 400rpx;
  margin: 48rpx auto 0;
  text-align: center;
  line-height: 70rpx;
  height: 72rpx;
  background: rgba(89, 96, 237, 1);
  border-radius: 55rpx;
  color: #fff;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
}
