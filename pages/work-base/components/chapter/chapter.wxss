.chapters{
  background: #F7F8FA;
  height: 100vh;
}
.chapters-content{
  display: flex;
  flex-direction: column;
  margin: 52rpx 42rpx;
}
.chapters-contentItem{
  background: #FEFFFE;
  box-shadow: 0px 4rpx 8rpx 0px #D8DBEB;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  padding: 40rpx 0 36rpx 38rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.chapters-chapterInfo{
  display: flex;
  position: relative;
  margin-top: 22rpx;
}

.chapters-chapterStatus{
  padding: 0rpx 30rpx 0rpx 36rpx;
  background: #353EE8;
  border-radius: 40rpx 0px 0px 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 66rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}

.chapters-chapterStatus text{
  margin-right: 6rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 66rpx;
}
.chapters-chapterStatus-lock{
  background: #E7E7E7;
}
.chapters-chapterStatus-lock text{
  color: #90919C;
}
.chapters-chapterCount{
  flex-grow: 1;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #323541;
  line-height: 42rpx;
}
.chapters-chapterCount view{
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}
.chapters-chapterCount image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.chapters-chapterStatus image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 2rpx;
}
.chapters-chapterTitle{
  display: flex;
  align-items: center;
}
.chapters-chapterTitle text{
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 50rpx;
  flex-grow: 1;
}
.chapters-chapterTitle image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.chapters-header{
  background: #FFFFFF;
  box-shadow: 0px 4rpx 16rpx 0px rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  padding: 46rpx 40rpx;
}
.chapters-chapterName{
  font-size: 44rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #303113;
  line-height: 60rpx;
}
.chapters-part{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5C6171;
  line-height: 40rpx;
  margin-top: 30rpx;
}
.chapters-chapterStatus-success text{
  color: white;
}
.chapters-chapterStatus-success image{
  width:30rpx;
  height:30rpx;
}
.chapters-chapterStatus-success{
  background: #5AD8A6
}