.track-header{
    position: relative;
}
.track-info{
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: calc(100vw - 110rpx);
    padding: 50rpx 40rpx 50rpx 50rpx;
    margin-top: 82rpx;
    background-color: #ffffff;
    box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(0, 0, 0, 0.05);
    border-radius: 0rpx 130rpx 130rpx 0px;
}
.plane{
    position: absolute;
    top: -50rpx;
}
.track-info-left{}
.track-info-right{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 170rpx;
    height: 170rpx;
    border-radius: 50%;
    background: rgba(53, 62, 232, 0.05);
}
.track-info-right > view{
    font-size: 28rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #353EE8;
    line-height: 40rpx;
}
.track-info-wrapper{
    position: absolute;
}
.title{
    font-size: 36rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: rgba(7, 9, 34, 0.8);
    line-height: 50rpx;
}
.record{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 28rpx;
    font-size: 24rpx;
}
.way{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 16rpx;
    font-size: 24rpx;
}
.track-content{
    margin-top: 40rpx;
}
.track-tab{
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    margin-bottom: 60rpx;
}
.done, .replying, .wait{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #8C8C8C;
    line-height: 20px;
}
.track-tab > text{
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #8C8C8C;
    line-height: 40rpx;
}
.tab-line{
    width: 100%;
    height: 5px;
    border-radius: 8rpx;
}
.tab-line.active{
    background-color:  #353EE8;
}
.tab-line-active{
    font-size: 14px;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #353EE8;
    line-height: 20px;
    color: #353EE8;
    border-radius: 4px;
}
.track-body{
    padding: 0 40rpx 0 40rpx;
}
.track-body-item{
    position: relative;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 30rpx;
    padding: 40rpx 40rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 4rpx 16rpx 4rpx rgba(53, 62, 232, 0.08);
    border-radius: 20rpx;
}
.arrow{
    position: absolute;
    right: -30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60rpx;
    height: 56rpx;
    background: #353EE8;
    border-radius: 12rpx;
}
.invite-button{
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
    line-height: 44rpx;
    background: #353EE8;
    border-radius: unset!important;
}
.detail-wrapper{
    margin-left: 30rpx;
}
.name{
    font-size: 30rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #000000;
    line-height: 42rpx;
    letter-spacing: 2rpx;
}
.endtime{
    margin-top: 20rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #AAAAAA;
    line-height: 34rpx;
}
.follow-button{
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 180rpx;
    left: 50%;
    transform: translateX(-50%);
    height: 76rpx;
    width: calc(100vw - 200rpx);
    padding: 0 40rpx;
    background: #FFF6E7;
    box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.2);
    border-radius: 40rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #B8702B;
    line-height: 40rpx;
}
.release-count{
    font-size: 20px;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #353EE8;
    line-height: 28px;
}
.evaluation-operator{
    font-weight: bold;
}
