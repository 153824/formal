<view wx:if="{{ reportListTrigger }}">
  <view wx:if="{{!list.length}}" class="noData">
    <view class="testPaperView" wx:if="{{scene!=1035}}">
      <image src="../../images/work-base@icon-demonstrate.png" class="iconImg"></image>
      <view class="title">罗课（厦门）网络科技有限公司</view>
      <view class="name">《模拟测评》</view>
      <view class="toTest" bindtap="toTestIt">开始模拟测试</view>
    </view>
    <image class="icon1" src="../../images/report-list@icon-empty.png" mode="widthFix"></image>
    <view class="mind">暂未收到任何公司或团队的测评邀约 </view>
  </view>
  <view class="list" wx:else>
    <block wx:for="{{list}}" wx:key="unique">
      <view class="item">
        <view class="companyName">{{item.user.company.name}}</view>
        <view class="reportMsg">
          <text class="paperName">《{{item.paper.name}}》</text>
          <image wx:if="{{item.status==2}}" class="finishImg" src="../../images/report-list@icon-done.png"></image>
          <text class="status" wx:else>未完成</text>
        </view>
        <view class="btnView btnView1" bindtap="changePage" data-url="../../../components/guide/guide?id={{item.id}}" wx:if="{{item.status==1}}">继续作答</view>
        <view class="btnView btnView1" bindtap="changePage" data-url="../../../components/guide/guide?id={{item.id}}" wx:elif="{{item.status==4}}">继续作答</view>
        <view class="btnView btnView2" bindtap="toDetail" data-index="{{index}}" wx:elif="{{item.status==2&&item.applyStatus==2 || item.shareMsg.reportMeet == 1 }}">查看报告</view>
        <view class="btnView btnView3" wx:elif="{{item.status==2&&item.applyStatus==1}}">已向HR申请查看报告，请耐心等待</view>
        <view class="btnView btnView2" bindtap="toApply" data-id="{{item.id}}" wx:else>向HR申请查看报告</view>
      </view>
    </block>
  </view>
  <view class="coverView" wx:if="{{showDlg}}"></view>
  <view class="dlgView" wx:if="{{showDlg}}">
    <image class="closeImg" bindtap="hideDlg" src="../../images/work-base@icon-close.png"></image>
    <image class="centerImg" src="../img/report/icon_check1.png"></image>
    <view class="mindMsg">申请成功，请关注罗课学堂公众号</view>
    <view class="mindMsg">我们将通过公众号推送HR的回复信息</view>
    <button class="dlgView-button" open-type="contact" show-message-card="true" send-message-img="{{mpImg}}">关注公众号</button>
  </view>
  <hola-tab-bar active="{{ active }}" morePath="../../../"></hola-tab-bar>
</view>
