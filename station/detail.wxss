/* station/detail.wxss */
.header{
  display: flex;
  height: 250rpx;
}
.header-wrapper{
  display: flex;
  padding: 34rpx 0 40rpx 40rpx;
  background-color: #fff;
  width: 100%;
}
.cover-wrapper{
  width: 176rpx;
  height: 176rpx;
}
.cover-wrapper > image{
  width: 176rpx;
  height: 176rpx;
}
.info-wrapper{
  margin-left: 30rpx;
}
.info-wrapper > .title{
  display: flex;
  font-size: 44rpx;
  font-weight: 500;
  color: #070922FF;
}
.price-wrapper{
  margin-top: 22rpx;
  margin-bottom: 20rpx;
}
.price-wrapper > .old{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  color: rgba(7, 9, 34, 0.4);
  font-size: 24rpx;
  text-decoration: line-through;
}
.price-wrapper > .new{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 4rpx;
  font-size: 32rpx;
  font-weight:500;
  color: rgba(184,112,43,1);
}
.use-time{
  color: rgba(7, 9, 34, 0.6);
  font-size: 24rpx;
}