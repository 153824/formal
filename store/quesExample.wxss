/* store/quesExample.wxss */

page {
  background-color: #f7f8fa;
}

.title {
  position: relative;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  color: rgba(47, 48, 56, 1);
  line-height: 44rpx;
  padding: 58rpx 40rpx 40rpx 84rpx;
  background-color: #fff;
}

.title:before {
  content: "";
  position: absolute;
  width: 24rpx;
  height: 44rpx;
  background: rgba(89, 96, 237, 1);
  border-radius: 7rpx;
  top: 58rpx;
  left: 40rpx;
}

.options {
  padding: 40rpx;
}

.options .item {
  background-color: #fff;
  box-shadow: 0px 0px 14rpx 0px rgba(167, 185, 237, 0.36);
  border-radius: 16rpx;
  padding: 34rpx 52rpx 32rpx;
  margin-bottom: 20rpx;
}

.options .item .txt {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 46rpx;
  width: 50rpx;
  margin-right: 2rpx;
}

.options .item .msg {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}
