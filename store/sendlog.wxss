/* index/store/tailed.wxss */

.container {
  background-color: #f5f9fa;
}

.headbox {
  width: 100%;
  height: 260rpx;
  padding: 20rpx 40rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
}

.headbox>image {
  width: 200rpx;
  height: 200rpx;
}

.headboxright {
  margin-left: 40rpx;
}

.bigtitle {
  font-size: 42rpx;
  font-weight: 600;
  color: rgba(50, 53, 65, 1);
  line-height: 60rpx;
  letter-spacing: 1px;
}

.headsmalltitle {
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(92, 97, 113, 1);
  line-height: 40rpx;
}

/* centerbox */

.centerbox {
  background-color: #fff;
  margin: 20rpx 0;
  height: 144rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}

.notext {
  position: relative;
}

.notext>image {
  width: 100%;
  height: 824rpx;
}

.notintro {
  position: absolute;
  bottom: 292rpx;
  left: 210rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
  color: rgba(50, 53, 65, 1);
  line-height: 56rpx;
}

.colbox {
  width: 25%;
}

.grayline {
  width: 2rpx;
  height: 60rpx;
  background-color: #d8d8d8;
}

.colbox>view {
  font-size: 28rpx;
  letter-spacing: 1px;
  line-height: 40rpx;
  color: #5c6171;
  margin-bottom: 20rpx;
}

.colbox>text {
  font-size: 36rpx;
  letter-spacing: 1px;
  line-height: 34rpx;
  color: #323541;
}

/* botbox */

.botbox {
  background-color: #fff;
  padding-bottom: 132rpx;
}

.list {
  height: 132rpx;
  padding: 22rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e7e7e7;
}

.lefttop {
  display: flex;
}

.listtitle {
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 1px;
  line-height: 40rpx;
  color: #323541;
}

.liststatus {
  font-size: 28rpx;
  letter-spacing: 1px;
  line-height: 40rpx;
  margin-left: 10rpx;
}

.fished {
  color: #00a47c;
}

.leftbottom {
  font-size: 24rpx;
  letter-spacing: 1px;
  line-height: 34rpx;
  color: #90919c;
  margin-top: 14rpx;
}

.listright {
  display: flex;
  align-items: center;
}

.listright>text {
  font-size: 28rpx;
  letter-spacing: 1px;
  line-height: 80rpx;
  color: #90919c;
}

.fontblue {
  color: #5960ed !important;
}

.underway {
  color: #fa8c16;
}

.listline {
  width: 2rpx;
  height: 34rpx;
  background-color: rgba(231, 231, 231, 1);
  margin: 0 20rpx;
}
/* 二维码 */

.datibox {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.daticenterbox {
  width: 556rpx;
  height: 990rpx;
  position: relative;
}

.daticenterboximg {
  width: 556rpx;
  height: 990rpx;
}

.daticlosebtn {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  top: -28rpx;
  right: -28rpx;
}

.datiboxfoottext {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
  margin-top: 32rpx;
}