<!--store/sharePaper.wxml-->
<view class="pageView">
  <view class="content">
    <view class="title">作答人数上限</view>
    <view class="flex box1">
      <view class="reduceBtn" bindtap="changeCount" data-t="1">-</view>
      <input value="{{count}}" bindinput="changeCount"></input>
      <view class="plusBtn" bindtap="changeCount" data-t="2">+</view>
    </view>
    <view class="title">二维码有效期</view>
    <view class="flex box2">
      <picker mode="date" value="{{startTime}}" start="{{minTime}}" bindchange="bindDateChange" data-k="startTime">
        <view class="picker">
          {{startTime}}
        </view>
      </picker>
      <view>至</view>
      <picker mode="date" value="{{endTime}}" start="{{minTime}}" bindchange="bindDateChange" data-k="endTime">
        <view class="picker">
          {{endTime}}
        </view>
      </picker>
    </view>
    <view class="title1">是否允许被测者直接查看报告</view>
    <view class="flex box3">
      <view class="flex-main {{reportMeet==2?'active':''}}" bindtap="changeReportMeet" data-k="2">
        <span></span>
        不允许
      </view>
      <view class="flex-main {{reportMeet==1?'active':''}}" bindtap="changeReportMeet" data-k="1">
        <span></span>
        允许
      </view>
    </view>
  </view>
  <view class="inviteBtn" bindtap="toSharePaper">生成测评邀请二维码</view>
</view>
<view class="datibox" wx:if="{{retData.img}}" catchtouchmove="true">
  <view class="daticenterbox">
    <image class="daticenterboximg" src="{{retData.img}}" show-menu-by-longpress="true"></image>
    <image class="daticlosebtn" bindtap="closedati" src="../img/store/icon1.png"></image>
  </view>
  <view class="datiboxfoottext">长按图片保存或发送给微信好友</view>
</view>