/* store/sharePaper.wxss */

.pageView {
  position: absolute;
  top: 42%;
  left: 32rpx;
  right: 32rpx;
  transform: translateY(-50%);
}

.top_title_main {
  font-size: 36rpx;
  font-weight: 600;
}

.top_title {
  margin-top: 14rpx;
  color: rgba(113, 113, 130, 1);
  font-size: 28rpx;
  font-weight: 400;
  margin-bottom: 80rpx;
}

.content {
  height: 600rpx;
  margin: auto;
  padding: 60rpx 40rpx;
  background:rgba(7,9,34,0.03);
  border-radius: 20rpx;
}

.content .title {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 600;
  color: rgba(7, 9, 34, 0.8);
  line-height: 44rpx;
  display: flex;
  justify-content: left;
  align-items: center;
}
.content .title .block{
  width: 8rpx;
  height: 32rpx;
  background:rgba(53,62,232,1);
  border-radius:4rpx;
  margin-right: 10rpx;
}

.content .title1 {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(18, 19, 47, 1);
  line-height: 44rpx;
}

.content .box1 {
  margin-top: 40rpx;
  margin-bottom: 80rpx;
  height: 88rpx;
}

.content .box1 view {
  width: 96rpx;
  height: 88rpx;
  background-color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
  font-size: 50rpx;
}

.content .box1 input {
  height: 88rpx;
  text-align: center;
  width: 172rpx;
  background-color: #FFFFFF;
  margin: 0 1px;
}

.content .box2 {
  margin-top: 38rpx;
  margin-bottom: 86rpx;
  border-bottom: 4rpx solid #d8d8d8;
}

.content .box2>view {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(7, 9, 34, 0.8);
  line-height: 44rpx;
  margin: 0 44rpx;
}

.content .box2 picker {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(7, 9, 34, 0.6);
  line-height: 44rpx;
}

.content .box3 {
  margin-top: 40rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(113, 113, 130, 1);
  line-height: 44rpx;
}

.content .box3 span {
  display: inline-block;
  border-radius: 50%;
  margin-right: 28rpx;
  width: 24rpx;
  height: 24rpx;
  border: 1px solid rgba(113, 113, 130, 1);
}

.content .box3 .active {
  color: rgba(18, 19, 47, 1);
}

.content .box3 .active span {
  background: rgba(255, 255, 255, 1);
  border: 6rpx solid rgba(53, 62, 232, 1);
}

.inviteBtn {
  width: 686rpx;
  height: 96rpx;
  margin: 80rpx auto 0;
  text-align: center;
  background: rgba(53, 62, 232, 1);
  border-radius: 10rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 96rpx;
  letter-spacing: 1px;
}

/* 二维码 */

.datibox {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.daticenterbox {
  width: 556rpx;
  height: 990rpx;
  position: relative;
}

.daticenterboximg {
  width: 556rpx;
  height: 990rpx;
}

.daticlosebtn {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  top: -28rpx;
  right: -28rpx;
}

.datiboxfoottext {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
  margin-top: 32rpx;
}
