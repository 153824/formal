/* test/guide.wxss */

.container {
  background: rgba(245, 249, 250, 0.46);
  height: 100vh;
}

.headbox {
  box-shadow: 0 4rpx 16rpx 0 rgba(204, 213, 237, 0.41);
  padding: 40rpx 50rpx 70rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.headbox>image {
  width: 74rpx;
  height: 74rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.headtitle {
  font-size: 48rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  color: rgba(50, 53, 65, 1);
  line-height: 74rpx;
  letter-spacing: 1px;
}

.headtitle>text {
  font-size: 48rpx;
  letter-spacing: 2px;
  line-height: 74rpx;
  color: #323541;
  font-weight: 500;
}

.invitetext {
  margin-top: 4rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(50, 53, 65, 1);
  line-height: 44rpx;
  letter-spacing: 1px;
}

/* bodybox */

.bodybox {
  width: 632rpx;
  /* height: 590rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 4rpx 16rpx 0 rgba(204, 213, 237, 0.41);
  border-radius: 18rpx;
  margin: 70rpx 58rpx 70rpx 60rpx;
  padding: 40rpx 94rpx 56rpx 74rpx;
  box-sizing: border-box;
}

.topic {
  margin-bottom: 126rpx;
}

.bodytitle {
  color: #5c6171;
  font-size: 28rpx;
  letter-spacing: 1px;
  line-height: 40rpx;
}

.bigtext {
  color: #323541;
  font-size: 48rpx;
  line-height: 66rpx;
  letter-spacing: 2px;
  margin-top: 12rpx;
}

.topicnum {
  border-bottom: 1px solid #e7e7e7;
  padding-bottom: 32rpx;
  margin-bottom: 40rpx;
}

.smalltext {
  font-size: 28rpx;
  letter-spacing: 1px;
  line-height: 40rpx;
  color: #323541;
  font-weight: 500;
  margin-top: 8rpx;
}

.begin {
  width: 632rpx;
  height: 88rpx;
  background: rgba(89, 96, 237, 1);
  box-shadow: 0 4rpx 8rpx 0 rgba(153, 162, 228, 0.5);
  border-radius: 18rpx;
  margin: 0 58rpx 0 60rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
  font-size: 36rpx;
  letter-spacing: 1px;
}

.infotext {
  font-size: 24rpx;
  color: #90919c;
  line-height: 34rpx;
  letter-spacing: 1px;
  display: block;
  text-align: center;
  padding: 34rpx 0;
}

/* mask */

.mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.39);
  position: fixed;
  left: 0;
  top: 0;
  overflow: scroll;
}

.commitment {
  /* width: 592rpx; */
  position: absolute;
  display: flex;
  top: 50%;
  left: 80rpx;
  right: 80rpx;
  transform: translateY(-50%);
  height: 988rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 18rpx;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.comtitlebox {
  text-align: center;
  padding: 36rpx 0 10rpx;
  position: relative;
  height: 64rpx;
}

.comtitlebox>text {
  position: absolute;
  left: 0;
  right: 0;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 58rpx;
  letter-spacing: 1px;
}

.comtitlebox>image {
  width: 346rpx;
  height: 64rpx;
  margin: auto;
}

.comtextbox {
  margin: 0 36rpx;
}

.combigtitle {
  font-size: 28rpx;
  letter-spacing: 1px;
  line-height: 40rpx;
  color: #323541;
  font-weight: 500;
}

.combigtitle>text {
  display: block;
}

.comtext {
  margin-top: 40rpx;
  font-size: 28rpx;
  letter-spacing: 1px;
  line-height: 40rpx;
  color: #323541;
}

.comimgbox {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.comimgbox>image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 18rpx;
}

.combtn {
  display: flex;
  height: 92rpx;
  border-top: 1px solid #e7e7e7;
  margin-top: 34rpx;
  text-align: center;
  line-height: 92rpx;
  font-size: 28rpx;
  letter-spacing: 1px;
}

.disagree {
  color: #90919c;
  width: 180rpx;
  border-right: 1px solid #d8d8d8;
}

.agree {
  width: 410rpx;
  color: #5960ed;
  font-weight: 500;
}
