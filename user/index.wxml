<view class="coverView" wx:if="{{showLogin||showDlg}}" bindtap="hideDlg"></view>
<view class="loginDlg" wx:if="{{showLogin}}">
  <view class="title">您还未登录</view>
  <view class="dlgContent">
    <text>请先登录再进行操作</text>
    <image src="../img/user/icon1.png"></image>
  </view>
  <view class="dlgBottom flex">
    <view class="noLogin btn" bindtap="hideLoginDlg">暂不登录</view>
    <button class="toLogin btn" open-type="getUserInfo" bindgetuserinfo="getUserInfo">立即登录</button>
  </view>
</view>
<view class="dlg" wx:if="{{showDlg}}">
  <view class="title">权限说明</view>
  <view class="borderView"></view>
  <view class="title1">超级管理员</view>
  <view class="mind">测评购买、测评发放、查看、分享报告 、 企业认证、充值、组织管理</view>
  <view class="title1">子管理员</view>
  <view class="mind">购买、发放、体验测评、查看报告</view>
  <view class="title1">普通成员</view>
  <view class="mind">查看分享给自己的报告</view>
</view>


<view class="coverView" wx:if="{{ showServing }}" bindtap="hideServing"></view>
<view class="dlg" wx:if="{{ showServing }}">
  <view class="title">客服联系方式</view>
  <view class="flex" style="text-align: left !important;">
    <view class="flex-main">
      <view class="callMobile">
        <image src="../img/user/vip/icon16.png"></image>
        点击拨打电话
      </view>
      <view class="kefuMobile" bindtap="callIt">{{ mobile }}</view>
    </view>
  </view>
  <view class="borderView"></view>
  <view class="flex" style="display: flex;">
    <view class="flex-main">
      <view class="callWX">
        <image src="../img/user/vip/icon17.png"></image>
        客服微信
      </view>
      <view class="kefuWX">{{ wechat }}</view>
    </view>
    <view class="copyBtn" bindtap="copyIt" style="display: inline-block;">复制微信号</view>
  </view>
  <view class="mind">添加时，请备注公司所属行业和规模</view>
</view>
