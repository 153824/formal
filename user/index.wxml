  <view class="test-set-meal">
    <view class="set-meal-wrapper">
      <view class="meal-title">
        <text>测评券套餐</text>
        <text class="meal-rule">券可用于兑换平台任意测评</text>
      </view>
      <scroll-view scroll-x="true">
        <view class="set-meal-group">
          <view wx:if="{{ isIos }}" class="set-meal-child" wx:for="{{ meal }}" wx:for-item="mealItem" data-type="{{ mealItem.type }}"
                bindtap="callServing">
            <view class="title">测评兑换券</view>
            <view class="count">{{ mealItem.number }}<text>张</text></view>
            <view class="price" style="z-index: 99;" bindtap="callServing">联系客服</view>
            <image class="ticket-bg" src="../img/user/index/ticket.png" style="height: 100.44px;width: 53.46px;"></image>
          </view>
          <view wx:if="{{ !isIos }}" class="set-meal-child" wx:for="{{ meal }}" wx:for-item="mealItem" data-type="{{ mealItem.type }}"
                bindtap="buyTicket">
            <view class="title">测评兑换券</view>
            <view class="count">{{ mealItem.number }}<text>张</text></view>
            <view class="price" style="z-index: 99;" bindtap="callServing">￥{{ mealItem.price }}</view>
            <image class="ticket-bg" src="../img/user/index/ticket.png" style="height: 100.44px;width: 53.46px;"></image>
          </view>
        </view>
      </scroll-view>
    </view>
